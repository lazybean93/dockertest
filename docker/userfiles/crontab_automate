@reboot export USER=automate && mkdir .boot && tightvncserver > .boot/tightvncserver.txt 2>&1 && git pull > .boot/git_pull.txt 2>&1 && while [ $(bc <<< "$(sh load.sh 1) < 0.05") -eq 0 ]; do sleep $(echo $(sh /home/automate/random.sh)*30 | bc); done && nmap -p 22 172.17.0.1/24 | grep -C5 open | grep -v '^$' | grep for | sed "s/$(hostname)//g" | sed 's/(//g;s/)//g;s/ /\n/g' | grep '\.' > .boot/hosts.txt
