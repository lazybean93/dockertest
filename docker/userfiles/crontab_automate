@reboot export USER=automate && mkdir .boot && tightvncserver > .boot/tightvncserver.txt 2>&1 && git pull > .boot/git_pull.txt 2>&1 && while [ $(uptime | sed 's/average: /\n/g' | tail -n1 | sed 's/ /\n/g' | head -n1 | sed 's/,$//g;s/,//g;s/^0//g;s/^0//g') -gt 10 ]; do sleep 1; done && nmap -p 22 172.17.0.1/24 | grep -C5 open | grep -v '^$' | grep for | sed "s/$(hostname)//g" | sed 's/(//g;s/)//g;s/ /\n/g' | grep '\.' > .boot/hosts.txt
